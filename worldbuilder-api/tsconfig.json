{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "module": "CommonJS",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "lib",
    "declaration": true
  },

  "include": ["src/**/*"]
}
